# this rule causes a make warning, so we remove it when it is not in use
shaders.lst: Makefile $(shaders_lst_OBJECTS)
	@echo "Linking shaders.lst..."; \
	rm -f $@; touch $@; \
	for i in $(shaders_lst_OBJECTS); do echo $$i >>$@; done

install-libshadersincHEADERS: $(libshadersinc_HEADERS)
	@$(NORMAL_INSTALL)
	@if test x"$(libshadersinc_HEADERS)" = x""; then :; else \
	  echo " $(mkinstalldirs) $(DESTDIR)$(libshadersincdir)"; \
	  $(mkinstalldirs) $(DESTDIR)$(libshadersincdir); \
	fi
	@list='$(libshadersinc_HEADERS)'; for p in $$list; do \
	  if test -f "$$p"; then d=; else d="$(srcdir)/"; fi; \
	  f="`echo $$p | sed -e 's|^.*/||'`"; \
	  src="$$d$$p"; dst="$(DESTDIR)$(libshadersincdir)/$$f"; \
	  if cmp -s "$$src" "$$dst"; then :; else \
	    echo " $(INSTALL_HEADER) $$src $$dst"; \
	    $(INSTALL_HEADER) "$$src" "$$dst" || exit 1; \
	  fi \
	done
	@list='$(ObsoletedHeaders)'; for f in $$list; do \
	  file="$(DESTDIR)$(libshadersincdir)/$$f"; \
	  if test -x "$$file"; then \
	    echo " rm -f $$file"; \
	    rm -f "$$file"; \
	  fi \
	done; \
	:

